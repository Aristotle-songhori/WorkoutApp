<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyTopAppBarComponent" />

    <style name="MyTopAppBarComponent.Button">
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ripple_def</item>
    </style>

    <style name="MyTopAppBarComponent.Button.Back">
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:layout_gravity">center_vertical|start</item>
    </style>

    <style name="MyTopAppBarComponent.Button.Action">
        <item name="tint">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="MyTopAppBarComponent.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTopAppBarComponent.TextView.Title">
        <item name="android:textSize">@dimen/top_app_bar_title_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyTopAppBarComponent.TextView.Subtitle">
        <item name="android:textSize">@dimen/top_app_bar_subtitle_text_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MyTopAppBarComponent.FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="elevation">@dimen/top_app_bar_elevation</item>
    </style>
</resources>