<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OptionsStartFragment">

    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="@dimen/ll_start_size"
        android:layout_height="@dimen/ll_start_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/_statistic"
        android:background="@drawable/background_oval_shape"
        android:backgroundTint="?attr/colorPrimary"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_start"
            android:textSize="@dimen/ll_start_text_size"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/roboto_light"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/CardViewDefault"
        android:layout_margin="@dimen/m_default_layout_margin"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m_default_layout_margin"
            >
            <!--TODO add workout statistic-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="?attr/colorSecondary"
                />
            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_no_data"
                android:textSize="@dimen/error_no_data_text_size"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>