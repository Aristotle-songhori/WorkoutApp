<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rssll971.workoutapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.MyNoActionBar">
        <activity android:name=".ActivitiesCatalogActivity"/>
        <activity android:name=".BmiActivity" />
        <activity android:name=".FinishActivity" />
        <activity android:name=".ExerciseActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- For having successful access to storage
               exported -> Deny access to other applications
               grantUriPermissions -> Temporarily permission to session
       -->
        <provider
            android:authorities="com.rssll971.workoutapp.FILE_PROVIDER_PATHS"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_image_paths"
                />
        </provider>



    </application>

</manifest>