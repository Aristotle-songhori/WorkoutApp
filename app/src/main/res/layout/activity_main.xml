<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/myWhite"
    >

    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_start"
            android:textColor="@color/myWhite"
            android:textSize="36sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bmi"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_activities"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_calendar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_bmi"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activities"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_bmi"
        app:layout_constraintRight_toLeftOf="@id/ll_settings"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_activity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Activities"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_settings"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_activities"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_settings"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Settings"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>