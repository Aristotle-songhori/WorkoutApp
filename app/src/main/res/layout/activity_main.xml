<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/myWhite">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_banner_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/st_banner_main_id"
        />

    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_start"
            android:textColor="@color/myWhite"
            android:textSize="36sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_start"
        app:layout_constraintBottom_toTopOf="@id/ll_bmi"
        android:background="@drawable/background_rectangle_white"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/st_optional"
            android:textSize="16sp"
            android:textColor="@color/myDarkBlue"
            android:textStyle="bold"
            />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/myWhite"
            android:visibility="invisible"
            />
    </FrameLayout>



    <LinearLayout
        android:id="@+id/ll_bmi"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_activities"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_calendar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_bmi"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activities"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_bmi"
        app:layout_constraintRight_toLeftOf="@id/ll_info"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_activity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_activities"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="@dimen/dim_btn_rectangle_width"
        android:layout_height="@dimen/dim_btn_rectangle_height"
        android:layout_marginBottom="@dimen/dim_main_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_activities"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_iv_main_square_size"
            android:layout_height="@dimen/dim_iv_main_square_size"
            android:layout_marginTop="@dimen/dim_main_iv_margin_top"
            android:src="@drawable/ic_info"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_info"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/myGreenBlue"
            android:textSize="@dimen/dim_main_text_btn"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>