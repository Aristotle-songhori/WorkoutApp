<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myPink"
    android:orientation="vertical"
    tools:context=".BmiCalculatorActivity">

    <!-- User's data-->
    <LinearLayout
        android:id="@+id/ll_editableData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >
        <ToggleButton
            android:id="@+id/tb_measurementSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/toggle_system"
            android:textOn=" "
            android:textOff=" "
            android:checked="true"
            />
        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/tb_measurementSystem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/st_height_m"
            android:textAlignment="textEnd"
            android:inputType="numberSigned"
            android:textSize="24sp"
            android:textColor="@color/myWhite"
            android:textCursorDrawable="@color/myWhite"
            android:textColorHint="@color/myWhite"
            android:backgroundTint="@color/myWhite"
            />
        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/st_weight_m"
            android:textAlignment="textEnd"
            android:inputType="numberSigned"
            android:textSize="24sp"
            android:textColor="@color/myWhite"
            android:textColorHint="@color/myWhite"
            android:textCursorDrawable="@color/myWhite"
            android:backgroundTint="@color/myWhite"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="@string/st_result"
            android:textSize="28sp"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/st_bmi_index"
            android:textSize="18sp"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_bmi_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="25"
            android:textSize="24sp"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/st_status"
            android:textSize="18sp"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_bmi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="Норма"
            android:textSize="24sp"
            android:textColor="@color/myWhite"
            android:textAlignment="center"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btn_actions"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_rectangle"
        android:paddingVertical="10dp"
        android:text="Calculate"
        android:textSize="28sp"
        android:textColor="@color/myPink"
        />


</androidx.constraintlayout.widget.ConstraintLayout>