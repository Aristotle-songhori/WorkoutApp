<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/myWhite"
    tools:context=".InfoFragment">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher_whistle"
        android:scaleType="fitXY"
        android:elevation="4dp"
        />
    <TextView
        android:id="@+id/tv_apps_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:textColor="@color/myDarkBlue"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_apps_name"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/st_version"
        android:textSize="22sp"
        android:textColor="@color/myDarkBlue"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_apps_name"
        app:layout_constraintLeft_toRightOf="@id/tv_version"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/app_version"
        android:textSize="22sp"
        android:textColor="@color/myDarkBlue"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Open source licenses"
            android:textSize="26sp"
            android:textColor="@color/myDarkBlue"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text=" - MPAndroidChart"
            android:textSize="18sp"
            android:textColor="@color/myDarkBlue"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:text="Licensed under the Apache License, Version 2.0
            \n\nCopyright 2020 Philipp Jahoda"
            android:textSize="14sp"
            android:textColor="@color/myDarkBlue"
            android:textAlignment="textStart"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text=" - Glide v4"
            android:textSize="18sp"
            android:textColor="@color/myDarkBlue"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_glide_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/st_license"
                android:textAlignment="inherit"
                android:textSize="14sp"
                android:textColor="@color/myDarkBlue"
                />
        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>