<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    android:orientation="vertical"
    tools:context=".FinishActivity"
    >
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/st_end"
        android:textSize="48sp"
        android:textColor="@color/myGreenBlue"
        android:textAlignment="center"
        android:textAllCaps="true"
        />
    <LinearLayout
        android:id="@+id/ll_tick"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_finish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circle_ripple"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="5dp"
        >
        <!--
            todo add image
            -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_tick_white"
            android:scaleType="fitCenter"
            android:elevation="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/st_exit"
            android:textSize="14sp"
            android:textColor="@color/myWhite"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:elevation="20dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/ll_tick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/st_finished_today"
        android:textSize="24sp"
        android:textColor="@color/myGreenBlue"
        android:textAlignment="center"
        android:elevation="20dp"
        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_banner_finish_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:adSize="MEDIUM_RECTANGLE"
        ads:adUnitId="@string/st_banner_finish_bottom_id"
        />

</androidx.constraintlayout.widget.ConstraintLayout>