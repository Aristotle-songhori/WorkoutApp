<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    android:orientation="vertical"
    tools:context=".FinishActivity"
    >
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/st_end"
        android:textSize="36sp"
        android:textColor="@color/myDarkBlue"
        android:textAlignment="center"
        android:textAllCaps="true"
        />
    <LinearLayout
        android:id="@+id/ll_exit"
        android:layout_width="@dimen/dim_finish_rectangles_widths"
        android:layout_height="@dimen/dim_finish_rectangles_heights"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_finish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_update_bmi"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_finish_circles_image_sizes"
            android:layout_height="@dimen/dim_finish_circles_image_sizes"
            android:layout_gravity="center"
            android:src="@drawable/ic_home"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/st_exit"
            android:textSize="18sp"
            android:textColor="@color/myDarkBlue"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_exit"
        app:layout_constraintBottom_toTopOf="@id/ll_update_bmi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/st_or"
        android:textSize="20sp"
        android:textColor="@color/myGreenBlue"
        android:textStyle="bold"
        android:textAlignment="center"
        android:elevation="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_update_bmi"
        android:layout_width="@dimen/dim_finish_rectangles_widths"
        android:layout_height="@dimen/dim_finish_rectangles_heights"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_bottom_title"
        android:background="@drawable/btn_rectangle_ripple"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="@dimen/dim_finish_circles_image_sizes"
            android:layout_height="@dimen/dim_finish_circles_image_sizes"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/st_update_bmi_data"
            android:textSize="14sp"
            android:textColor="@color/myDarkBlue"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_update_bmi"
        app:layout_constraintBottom_toTopOf="@id/adView_banner_finish_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/st_finished_today"
        android:textSize="24sp"
        android:textColor="@color/myGreenBlue"
        android:textStyle="bold"
        android:textAlignment="center"
        android:elevation="20dp"
        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_banner_finish_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:adSize="MEDIUM_RECTANGLE"
        ads:adUnitId="@string/st_banner_finish_bottom_id"
        />

</androidx.constraintlayout.widget.ConstraintLayout>