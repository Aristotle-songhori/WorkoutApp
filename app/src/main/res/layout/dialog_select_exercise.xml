<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="580dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ll_activities_background_white"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ll_activities_background_white"
        android:elevation="5dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_voice_title"
            android:layout_width="150dp"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rg_voice"
            android:text="Voice Assistant:"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/myBlue"
            />
        <RadioGroup
            android:id="@+id/rg_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_voice_title"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_voice_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/myBlue"
                android:buttonTint="@color/myBlue"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/rb_voice_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/myBlue"
                android:buttonTint="@color/myBlue"
                android:checked="false"
                />
        </RadioGroup>


        <TextView
            android:id="@+id/tv_chill_title"
            android:layout_width="150dp"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_voice_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rg_voice"
            android:text="Chill time:"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/myBlue"
            />
        <ImageView
            android:id="@+id/iv_minus_chill_time"
            android:layout_width="@dimen/dim_select_exercise_objects_height"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/tv_chill_title"
            app:layout_constraintRight_toLeftOf="@id/tv_chill_time"
            app:layout_constraintTop_toTopOf="@id/tv_chill_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_chill_title"
            android:src="@drawable/ic_expand"
            android:rotation="90"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_chill_time"
            android:layout_width="30dp"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/iv_minus_chill_time"
            app:layout_constraintRight_toLeftOf="@id/iv_plus_chill_time"
            app:layout_constraintTop_toTopOf="@id/iv_minus_chill_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_minus_chill_time"
            tools:text="10"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/myBlue"
            />
        <ImageView
            android:id="@+id/iv_plus_chill_time"
            android:layout_width="@dimen/dim_select_exercise_objects_height"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/tv_chill_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_chill_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_chill_time"
            android:src="@drawable/ic_expand"
            android:rotation="-90"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_exercise_time_title"
            android:layout_width="150dp"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_chill_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rg_voice"
            android:text="Exercise time:"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/myBlue"
            />
        <ImageView
            android:id="@+id/iv_minus_exercise_time"
            android:layout_width="@dimen/dim_select_exercise_objects_height"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/tv_exercise_time_title"
            app:layout_constraintRight_toLeftOf="@id/tv_exercise_time"
            app:layout_constraintTop_toTopOf="@id/tv_exercise_time_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_exercise_time_title"
            android:src="@drawable/ic_expand"
            android:rotation="90"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_exercise_time"
            android:layout_width="30dp"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/iv_minus_exercise_time"
            app:layout_constraintRight_toLeftOf="@id/iv_plus_exercise_time"
            app:layout_constraintTop_toTopOf="@id/iv_minus_exercise_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_minus_exercise_time"
            tools:text="10"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/myBlue"
            />
        <ImageView
            android:id="@+id/iv_plus_exercise_time"
            android:layout_width="@dimen/dim_select_exercise_objects_height"
            android:layout_height="@dimen/dim_select_exercise_objects_height"
            app:layout_constraintLeft_toRightOf="@id/tv_exercise_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_exercise_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_exercise_time"
            android:src="@drawable/ic_expand"
            android:rotation="-90"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_select_activities"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:id="@+id/ll_start_session"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rectangle_ol_ripple"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_start"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/myWhite"
            android:textSize="28sp" />
    </LinearLayout>
</LinearLayout>